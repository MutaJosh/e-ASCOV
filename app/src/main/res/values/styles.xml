<resources>
    <!-- Base application theme. -->

    <style name="SplashScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="DefaultText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText" parent="DefaultText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionSubTitleText" parent="DefaultText">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExportTitleText" parent="DefaultText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomButton">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomFormButton">
        <item name="android:background">@drawable/shape_button_form</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
    </style>

    <style name="AnswerTitleText">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/grey_9f9f9f</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>
</resources>